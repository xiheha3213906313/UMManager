<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UMManager.WinUI.Views.CharacterDetailsPages.ModGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UMManager.WinUI.Views.CharacterDetailsPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UMManager.WinUI.Models"
    xmlns:notifications="using:UMManager.WinUI.Services.Notifications"
    xmlns:subViewModels="using:UMManager.WinUI.ViewModels.CharacterDetailsViewModels.SubViewModels"
    xmlns:xaml="using:UMManager.WinUI.Helpers.Xaml"
    IsEnabled="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <xaml:AttentionTypeToSymbolConverter x:Key="AttentionTypeToSymbolConverter" />
    </UserControl.Resources>
    <Grid>

        <Grid.Resources>
            <Flyout
                x:Name="ModRowFlyout"
                Placement="RightEdgeAlignedBottom"
                ShouldConstrainToRootBounds="False">


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE74D;" />
                        <FontIcon Grid.Column="1" Glyph="&#xE74D;" />
                    </Grid>

                    <StackPanel Grid.Row="1">
                        <Button>移动模组...</Button>
                        <Button>模组详情...</Button>
                        <Button>预设...</Button>
                        <Button>命令...</Button>
                    </StackPanel>

                </Grid>




            </Flyout>
        </Grid.Resources>

        <controls:DataGrid
            x:Name="ModListGrid"
            AllowDrop="False"
            AutoGenerateColumns="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CellEditEnded="ModListGrid_OnCellEditEnded"
            CellEditEnding="ModListGrid_OnCellEditEnding"
            ClipboardCopyMode="ExcludeHeader"
            ContextFlyout="{Binding ElementName=ModRowFlyout, Mode=OneTime}"
            FrozenColumnCount="3"
            GridLinesVisibility="All"
            ItemsSource="{x:Bind ViewModel.GridMods, Mode=OneWay}"
            KeyDown="ModListGrid_OnKeyDown"
            SelectionChanged="ModListGrid_OnSelectionChanged"
            SelectionMode="{x:Bind ViewModel.GridSelectionMode, Mode=OneWay}"
            Sorting="OnColumnSort">
            <!--
                KeyDown="ModListGrid_OnKeyDown"
            -->


            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn
                    Width="SizeToHeader"
                    CanUserResize="False"
                    CanUserSort="True"
                    ClipboardContentBinding="{Binding IsEnabled, Mode=OneWay}"
                    Header="启用"
                    Tag="IsEnabled">

                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="subViewModels:ModRowVM">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <CheckBox
                                    Width="Auto"
                                    MinWidth="0"
                                    Command="{x:Bind ToggleEnabledCommand}"
                                    CommandParameter="{x:Bind}"
                                    IsChecked="{x:Bind IsEnabled, Mode=OneWay}"
                                    IsTabStop="False" />
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>


                <controls:DataGridTemplateColumn
                    Width="SizeToCells"
                    MinWidth="0"
                    CanUserSort="False"
                    Header=""
                    IsReadOnly="True"
                    Tag="NotificationColumn">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="subViewModels:ModRowVM">

                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <ItemsRepeater ItemsSource="{x:Bind ModNotifications}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="subViewModels:ModRowVM_ModNotificationVM">
                                            <Grid Margin="4,0" VerticalAlignment="Center">
                                                <Button
                                                    Margin="0"
                                                    Padding="0"
                                                    BorderThickness="0"
                                                    Click="Notification_OnClick"
                                                    CornerRadius="0"
                                                    DataContext="{x:Bind}"
                                                    PointerEntered="NotificationButton_OnPointerEntered"
                                                    PointerExited="NotificationButton_OnPointerExited">
                                                    <Button.Content>
                                                        <FontIcon
                                                            VerticalAlignment="Bottom"
                                                            Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                                                            Glyph="{x:Bind AttentionType, Converter={StaticResource AttentionTypeToSymbolConverter}}" />
                                                    </Button.Content>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>

                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTextColumn
                    Width="SizeToCells"
                    Binding="{Binding DisplayName, Mode=OneWay}"
                    CanUserSort="True"
                    Header="模组名称"
                    IsReadOnly="True"
                    Tag="DisplayName" />

                <controls:DataGridTextColumn
                    Width="SizeToCells"
                    Binding="{Binding FolderName, Mode=OneWay}"
                    CanUserSort="True"
                    Header="模组文件夹名称"
                    IsReadOnly="True"
                    Tag="FolderName"
                    Visibility="{x:Bind ViewModel.IsModFolderNameColumnVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                <controls:DataGridTextColumn
                    Width="SizeToCells"
                    Binding="{Binding Author, Mode=OneWay}"
                    CanUserSort="True"
                    Header="作者"
                    Tag="Author" />

                <controls:DataGridTemplateColumn
                    Width="SizeToCells"
                    CanUserSort="True"
                    ClipboardContentBinding="{Binding DateAddedFormated, Mode=OneTime}"
                    Header="添加"
                    IsReadOnly="True"
                    Tag="DateAdded">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="subViewModels:ModRowVM">
                            <Grid
                                Margin="8,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Text="{Binding DateAddedFormated, Mode=OneTime}" />
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTextColumn
                    Width="SizeToCells"
                    Binding="{Binding InPresets, Mode=OneWay}"
                    CanUserSort="True"
                    Header="预设"
                    IsReadOnly="True"
                    Tag="Presets" />

                <controls:DataGridTextColumn
                    x:Name="NotesColumn"
                    Width="SizeToCells"
                    Binding="{Binding Description, Mode=OneWay}"
                    CanUserSort="False"
                    Header="备注"
                    IsReadOnly="False"
                    Tag="Description" />

            </controls:DataGrid.Columns>



        </controls:DataGrid>
    </Grid>
</UserControl>
