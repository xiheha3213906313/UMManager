<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UMManager.WinUI.Views.LayoutEditModePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="using:UMManager.WinUI.ViewModels"
    xmlns:xaml="using:UMManager.WinUI.Helpers.Xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LayoutEditModePageRoot"
    mc:Ignorable="d">

    <Page.Resources>
        <xaml:BoolToVisibleConverter x:Name="BoolToVisibleConverter" />
    </Page.Resources>

    <Grid Margin="0,-24,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Left"
            FontSize="28"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="界面编辑模式" />

        <Grid Grid.Row="1" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ScrollViewer
                    Grid.Column="0"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ItemsRepeater ItemsSource="{Binding Categories}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="8" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="vm:UiCategoryVm">
                                    <Grid>
                                        <Button
                                            MinWidth="44"
                                            Height="44"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            ToolTipService.ToolTip="{x:Bind Name}"
                                            Command="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.SelectCategoryCommand}"
                                            CommandParameter="{x:Bind}">
                                            <Grid MinWidth="44" Height="44">
                                                <Border
                                                    Background="Transparent"
                                                    CornerRadius="8" />
                                                <Border
                                                    BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="8"
                                                    Visibility="{x:Bind IsSelected, Mode=OneWay, Converter={StaticResource BoolToVisibleConverter}}" />

                                                <Image
                                                    Margin="6"
                                                    Stretch="Uniform"
                                                    Visibility="{x:Bind PreferImage, Mode=OneWay, Converter={StaticResource BoolToVisibleConverter}}">
                                                    <Image.Source>
                                                        <BitmapImage DecodePixelHeight="32" UriSource="{x:Bind ImageUri}" />
                                                    </Image.Source>
                                                </Image>

                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{x:Bind Name}"
                                                    Visibility="{x:Bind PreferText, Mode=OneWay, Converter={StaticResource BoolToVisibleConverter}}" />
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                        <Button
                            Height="44"
                            Command="{Binding CreateCategoryCommand}"
                            Content="添加" />
                    </StackPanel>
                </ScrollViewer>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Command="{Binding HideSelectedCategoryCommand}"
                        Content="{Binding HideButtonText}"
                        IsEnabled="{Binding CanHideSelectedCategory}" />
                    <Button
                        Command="{Binding EditSelectedCategoryCommand}"
                        Content="修改"
                        IsEnabled="{Binding CanEditSelectedCategory}" />
                    <Button
                        Command="{Binding BulkRemoveCharactersFromSelectedCategoryCommand}"
                        Content="批量删除"
                        IsEnabled="{Binding CanEditSelectedCategory}" />
                    <Button
                        Command="{Binding DeleteSelectedCategoryCommand}"
                        Content="删除分类"
                        IsEnabled="{Binding CanEditSelectedCategory}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Column="0"
                    RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Style="{ThemeResource SubtitleTextBlockStyle}" Text="显示当前分类的角色" />
                    <Grid Grid.Row="1">
                        <controls:AdaptiveGridView
                            x:Name="SelectedCategoryCharactersGrid"
                            animations:ItemsReorderAnimation.Duration="00:00:00.1800000"
                            DesiredWidth="150"
                            HorizontalAlignment="Stretch"
                            IsItemClickEnabled="False"
                            ItemHeight="150"
                            ItemsSource="{Binding VisibleCharacters}"
                            Opacity="{Binding SelectedCategoryCharactersOpacity}"
                            SelectionMode="None"
                            StretchContentForSingleRow="False">
                            <controls:AdaptiveGridView.ItemTemplate>
                                <DataTemplate x:DataType="vm:CharacterTagVm">
                                    <Grid
                                        Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Image VerticalAlignment="Top">
                                                <Image.Source>
                                                    <BitmapImage DecodePixelWidth="150" UriSource="{x:Bind ImageUri}" />
                                                </Image.Source>
                                            </Image>

                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Command="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.RemoveCharacterFromSelectedCategoryCommand}"
                                                CommandParameter="{x:Bind}"
                                                Padding="6,2"
                                                Content="移除"
                                                FontSize="12"
                                                MinHeight="0"
                                                MinWidth="0"
                                                IsEnabled="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.CanEditSelectedCategory}"
                                                Visibility="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.CanEditSelectedCategory, Converter={StaticResource BoolToVisibleConverter}}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="{StaticResource XXSmallTopMargin}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                FontFamily="{StaticResource GenshinFont}"
                                                FontSize="14"
                                                TextWrapping="WrapWholeWords"
                                                Text="{x:Bind DisplayName}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </controls:AdaptiveGridView.ItemTemplate>
                        </controls:AdaptiveGridView>

                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.ToolTip="该分类已隐藏，角色页不会显示"
                            Visibility="{Binding IsSelectedCategoryHidden, Converter={StaticResource BoolToVisibleConverter}}">
                            <FontIcon
                                HorizontalAlignment="Center"
                                FontSize="44"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Glyph="&#xE8F5;" />
                            <TextBlock
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="可见性关闭" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Style="{ThemeResource SubtitleTextBlockStyle}" Text="可添加的角色" />
                    <ListView
                        Grid.Row="1"
                        IsItemClickEnabled="False"
                        ItemsSource="{Binding AvailableCharacters}"
                        SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    MinHeight="56"
                                    Margin="0,2"
                                    Padding="6,4"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8">
                                    <Grid ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Width="44"
                                            Height="44"
                                            CornerRadius="8"
                                            Background="{ThemeResource ControlFillColorSecondaryBrush}">
                                            <Image
                                                Width="44"
                                                Height="44"
                                                Stretch="UniformToFill"
                                                Source="{Binding ImageUri}" />
                                        </Border>
                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Text="{Binding DisplayName}" />
                                        <Button
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Command="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.AddCharacterToSelectedCategoryCommand}"
                                            CommandParameter="{Binding}"
                                            Content="添加"
                                            IsEnabled="{Binding ElementName=LayoutEditModePageRoot, Path=DataContext.CanEditSelectedCategory}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
