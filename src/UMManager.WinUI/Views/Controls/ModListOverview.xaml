<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="UMManager.WinUI.Views.Controls.ModListOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UMManager.WinUI.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UMManager.WinUI.Models"
    d:DataContext="{d:DesignInstance Type=models:ModModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <MenuBar>
                    <MenuBarItem Title="模组">
                        <MenuBarItem.Items>

                            <MenuFlyoutItem Text="添加模组...">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuBarItem.Items>
                    </MenuBarItem>

                </MenuBar>

            </StackPanel>

            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <InfoBar
                    IsClosable="False"
                    IsOpen="True"
                    Message="已选择多个皮肤"
                    Severity="Warning" />
            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <controls:DataGrid
                x:Name="_ModListGrid"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                GridLinesVisibility="All">
                <controls:DataGrid.Columns>
                    <controls:DataGridCheckBoxColumn
                        Width="SizeToCells"
                        Binding="{Binding IsEnabled, Mode=TwoWay}"
                        CanUserResize="False"
                        CanUserSort="True"
                        Header="启用"
                        IsReadOnly="True"
                        Tag="IsEnabled" />
                    <controls:DataGridTextColumn
                        Width="SizeToCells"
                        Binding="{Binding Name, Mode=OneWay}"
                        CanUserSort="True"
                        Header="模组名称"
                        IsReadOnly="True"
                        Tag="Name" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>


    </Grid>
</UserControl>
