<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UMManager.WinUI.Views.EasterEggPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UMManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="冲啊啊啊——隐藏页面！" />
        </StackPanel>


        <Grid Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="如果你看到这行字，说明 GIF 没加载出来..." />
            <Image
                x:Name="Image"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ImageFailed="Image_OnImageFailed"
                Source="https://media.tenor.com/tDpElw3fCiQAAAAC/ez-clap.gif" />
        </Grid>


        <StackPanel Grid.Row="2">
            <TextBlock Text="C.C.（C-2）是最棒的！" />
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" Text="另外，我芙宁娜 50/50 歪了 ;_;" />


            <Button
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="ButtonBase_OnClick"
                Content="⚠️ 不要点这个按钮 ⚠️"
                PointerEntered="UIElement_OnPointerEntered"
                PointerExited="UIElement_OnPointerExited" />

        </Grid>

    </Grid>
</Page>
