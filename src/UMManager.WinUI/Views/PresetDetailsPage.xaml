<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UMManager.WinUI.Views.PresetDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls1="using:UMManager.WinUI.Views.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UMManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:UMManager.WinUI.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Style="{StaticResource TitleTextBlockStyle}"
                TextWrapping="NoWrap"
                Text="{x:Bind ViewModel.GetPageTitle, Mode=OneWay}" />

            <ProgressRing
                Grid.Column="1"
                HorizontalAlignment="Right"
                IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" />
        </Grid>




        <Grid Grid.Row="1" Padding="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CommandBar
                HorizontalAlignment="Left"
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                DefaultLabelPosition="Right"
                IsOpen="False">
                <AppBarButton
                    Command="{x:Bind ViewModel.AddModsToPresetCommand}"
                    Icon="Add"
                    Label="添加模组" />
            </CommandBar>

            <TextBox
                x:Name="SearchBox"
                Grid.Column="1"
                MinWidth="400"
                MaxHeight="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                PlaceholderText="搜索模组..."
                TextChanged="SearchBox_OnTextChanged" />
        </Grid>



        <controls:AdaptiveGridView
            Grid.Row="2"
            animations:ItemsReorderAnimation.Duration="00:00:00.1800000"
            DesiredWidth="400"
            FlowDirection="LeftToRight"
            ItemHeight="250"
            ItemsSource="{x:Bind ViewModel.ModEntries}"
            SelectionMode="None">


            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:ModPresetEntryDetailedVm">
                    <Grid
                        MaxWidth="600"
                        Margin="4"
                        Padding="4"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <Button
                                MaxHeight="32"
                                VerticalAlignment="Center"
                                Command="{x:Bind NavigateToModCommand}"
                                CommandParameter="{Binding Mode=OneTime}"
                                CornerRadius="8"
                                ToolTipService.ToolTip="{x:Bind GoToText}"
                                Visibility="{x:Bind HasConnectedCharacter, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Content>

                                    <StackPanel
                                        MaxHeight="32"
                                        Orientation="Horizontal"
                                        Spacing="4">
                                        <Image Width="32" Height="32">
                                            <Image.Source>
                                                <BitmapImage DecodePixelWidth="32" UriSource="{x:Bind CharacterUri}" />
                                            </Image.Source>
                                        </Image>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource GenshinFont}"
                                            Text="{x:Bind CharacterName}" />
                                    </StackPanel>

                                </Button.Content>
                            </Button>



                            <DropDownButton
                                Grid.Column="1"
                                MaxHeight="32"
                                HorizontalAlignment="Right"
                                AutomationProperties.Name="更多选项">
                                <DropDownButton.Content>
                                    <FontIcon Glyph="&#xE712;" />
                                </DropDownButton.Content>
                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Command="{x:Bind ReplaceMissingModCommand}"
                                            CommandParameter="{Binding Mode=OneWay}"
                                            Visibility="{x:Bind IsMissing, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Text="查找替换模组">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8DA;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem
                                            Command="{x:Bind ReadAndSavePreferencesCommand}"
                                            CommandParameter="{Binding Mode=OneWay}"
                                            ToolTipService.ToolTip="读取当前 3Dmigoto user ini 中该模组的设置，并保存到此预设"
                                            Visibility="{x:Bind IsNotMissing, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Text="读取并保存偏好设置">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE74E;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator Height="20" />
                                        <MenuFlyoutItem
                                            Command="{x:Bind RemoveModFromPresetCommand}"
                                            CommandParameter="{Binding Mode=OneTime}"
                                            Text="从预设中移除模组">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE894;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>




                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="8">
                                <Image Grid.Column="0">
                                    <Image.Source>
                                        <BitmapImage DecodePixelWidth="300" UriSource="{x:Bind ImageUri}" />
                                    </Image.Source>
                                </Image>
                            </Grid>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Spacing="12">
                                <TextBlock
                                    FontSize="16"
                                    IsTextSelectionEnabled="True"
                                    TextWrapping="WrapWholeWords"
                                    Text="{x:Bind Name}" />

                                <controls1:LinkButton
                                    HorizontalAlignment="Center"
                                    Link="{x:Bind SourceUrl}"
                                    Visibility="{x:Bind HasSourceUrl, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Text="{x:Bind ModUrlName}" />

                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="加入预设时间：" />
                                    <TextBlock HorizontalAlignment="Center" Text="{x:Bind AddedAt}" />
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="2" Visibility="{x:Bind IsMissing, Converter={StaticResource BoolToVisibilityConverter}}">


                            <StackPanel HorizontalAlignment="Center" Spacing="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Foreground="Red"
                                    Text="未在磁盘上找到该模组！" />

                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="原始路径：" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        IsTextSelectionEnabled="True"
                                        TextWrapping="Wrap"
                                        ToolTipService.ToolTip="{x:Bind FullPath}"
                                        Text="{x:Bind FullPath}" />
                                </StackPanel>
                            </StackPanel>


                        </Grid>

                    </Grid>


                </DataTemplate>
            </GridView.ItemTemplate>

        </controls:AdaptiveGridView>

    </Grid>
</Page>
