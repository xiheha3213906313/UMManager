<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UMManager.WinUI.Views.Settings.CommandsSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UMManager.WinUI.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsViewModels="using:UMManager.WinUI.ViewModels.SettingsViewModels"
    xmlns:winUi="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">



    <ScrollViewer Width="1000">

        <StackPanel
            MaxWidth="1000"
            Margin="8,0,8,0"
            HorizontalAlignment="Stretch"
            Spacing="4">
            <TextBlock Style="{StaticResource PageTitleStyle}" Text="命令设置" />


            <controls:SettingsCard
                Description="在此可以定义 UMManager 可执行的自定义命令。目前，包含 {{TargetPath}} 的命令只能从模组总览页运行。"
                Header="创建新命令"
                HeaderIcon="{winUi:FontIcon Glyph=&#xE70F;}">
                <Button Command="{x:Bind ViewModel.OpenCreateCommandCommand}" Content="创建新命令" />
            </controls:SettingsCard>

            <controls:SettingsExpander
                Description="在此可以查看、编辑或删除已创建的命令定义"
                Header="命令定义"
                HeaderIcon="{winUi:FontIcon Glyph=&#xE74E;}"
                IsExpanded="True">
                <controls:SettingsExpander.Items>
                    <controls:SettingsCard HorizontalContentAlignment="Left" ContentAlignment="Left">

                        <ListView
                            HorizontalAlignment="Stretch"
                            ItemsSource="{x:Bind ViewModel.CommandDefinitions}"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="settingsViewModels:CommandDefinitionVM">
                                    <Grid
                                        MinWidth="800"
                                        Margin="0,4,0,4"
                                        Padding="4,4,4,4"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        RowSpacing="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>


                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>

                                                <TextBlock
                                                    FontSize="16"
                                                    IsTextSelectionEnabled="True"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTipService.ToolTip="{x:Bind CommandDisplayName}">
                                                    <Run Text="显示名称：" />
                                                    <Run Text="{x:Bind CommandDisplayName}" />
                                                </TextBlock>

                                                <TextBlock
                                                    FontSize="10"
                                                    IsTextSelectionEnabled="True"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTipService.ToolTip="{x:Bind Id}">
                                                    <Run Text="命令定义 ID：" />
                                                    <Run Text="{x:Bind Id}" />
                                                </TextBlock>
                                            </StackPanel>


                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Content="运行"
                                                    IsEnabled="{x:Bind HasNoTargetPathVariable, Mode=OneWay}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <StackPanel>
                                                                <TextBlock Text="确定要运行此命令吗？" />
                                                                <Button
                                                                    HorizontalAlignment="Center"
                                                                    Command="{x:Bind RunCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    Content="运行"
                                                                    Style="{ThemeResource AccentButtonStyle}" />
                                                            </StackPanel>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                </Button>

                                                <Button
                                                    VerticalAlignment="Center"
                                                    Command="{x:Bind EditCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="编辑" />

                                                <Button
                                                    VerticalAlignment="Center"
                                                    Content="删除"
                                                    IsEnabled="{x:Bind CanDelete, Mode=OneWay}">
                                                    <Button.Flyout>
                                                        <Flyout x:Name="DeleteFlyout">
                                                            <StackPanel>
                                                                <TextBlock Text="确定要删除此命令吗？" />
                                                                <Button
                                                                    HorizontalAlignment="Center"
                                                                    Command="{x:Bind DeleteCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    Content="删除" />
                                                            </StackPanel>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel Grid.Row="1" Spacing="8">
                                            <TextBlock
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind Executable}">
                                                <Run Text="可执行文件：" />
                                                <Run Text="{x:Bind Executable}" />
                                            </TextBlock>
                                            <TextBlock
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind WorkingDirectory}">
                                                <Run Text="工作目录：" />
                                                <Run Text="{x:Bind WorkingDirectory}" />
                                            </TextBlock>
                                            <TextBlock
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind Arguments}">
                                                <Run Text="参数：" />
                                                <Run Text="{x:Bind Arguments}" />
                                            </TextBlock>

                                            <StackPanel Orientation="Horizontal">
                                                <ItemsRepeater ItemsSource="{x:Bind Attributes}">
                                                    <ItemsRepeater.Layout>
                                                        <StackLayout Orientation="Horizontal" />
                                                    </ItemsRepeater.Layout>
                                                </ItemsRepeater>
                                            </StackPanel>
                                        </StackPanel>


                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </controls:SettingsCard>

                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>



            <controls:SettingsExpander
                Description="当前实例中由 UMManager 启动并正在运行的命令"
                Header="正在运行的命令"
                HeaderIcon="{winUi:FontIcon Glyph=&#xE768;}"
                IsExpanded="True">

                <controls:SettingsExpander.Items>
                    <controls:SettingsCard HorizontalContentAlignment="Left" ContentAlignment="Left">


                        <ListView ItemsSource="{x:Bind ViewModel.RunningCommands}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="settingsViewModels:CommandVM">
                                    <Grid
                                        MinWidth="800"
                                        Margin="0,4,0,4"
                                        Padding="4,4,4,4"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />

                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock
                                                FontSize="16"
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind CommandDisplayName}">
                                                <Run Text="显示名称：" />
                                                <Run Text="{x:Bind CommandDisplayName}" />
                                            </TextBlock>

                                            <TextBlock
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind FullCommand}">
                                                <Run Text="完整命令：" />
                                                <Run Text="{x:Bind FullCommand}" />
                                            </TextBlock>

                                            <TextBlock
                                                FontSize="10"
                                                IsTextSelectionEnabled="True"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTipService.ToolTip="{x:Bind Id}">
                                                <Run Text="命令定义 ID：" />
                                                <Run Text="{x:Bind Id}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Command="{x:Bind KillCommand}"
                                            CommandParameter="{x:Bind}"
                                            Content="结束" />

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </controls:SettingsCard>

                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>



        </StackPanel>
    </ScrollViewer>

</Page>
